# Application
APP_NAME=logistics-microservice
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Type ("mysql" o "postgres")
DB_TYPE=mysql

# MySQL Database (XAMPP Local)
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_DATABASE=logistics_db
MYSQL_USER=root
MYSQL_PASSWORD=

# Supabase Database (PostgreSQL) - Alternativa
SUPABASE_DB_HOST=tu-proyecto.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=tu-password-supabase

# Database Pool Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=10.0

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://tu-evolution-api.com
EVOLUTION_API_KEY=tu-api-key-evolution
EVOLUTION_INSTANCE_NAME=SATECH

# Gemini AI
GEMINI_API_KEY=tu-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Floatify (opcional)
FLOATIFY_API_URL=https://api.floatify.com
FLOATIFY_API_KEY=tu-floatify-api-key

# Wialon (opcional)
WIALON_TOKEN=tu-wialon-token

# Security
WEBHOOK_SECRET=genera-un-secreto-seguro
JWT_SECRET_KEY=genera-un-jwt-secret
ALLOWED_ORIGINS=["*"]

# Timeouts (en segundos)
HTTP_TIMEOUT=30
GEMINI_TIMEOUT=60

# Retry configuration
MAX_RETRIES=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=10.0

# Sentry (opcional)
SENTRY_DSN=

